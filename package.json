{
  "name": "siamese-thai",
  "private": true,
  "description": "Siamese Thai Restaurant",
  "homepage": "https://iambumblehead.github.io/siamese-thai/",
  "main": "src/index.tsx",
  "module": "dist/index.es.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/iambumblehead/siamese-thai-restaurant.git"
  },
  "author": {
    "name": "chris",
    "email": "chris@bumblehead.com",
    "url": "https://bumblehead.com"
  },
  "dependencies": {
    "i18next": "^20.3.1",
    "i18next-browser-languagedetector": "^6.1.1",
    "react": "^17.0.2",
    "react-i18next": "^11.10.0",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.3",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-ava": "^12.0.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0"
  },
  "devDependencies": {
    "husky": "^6.0.0",
    "@babel/cli": "7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/parser": "^7.14.3",
    "@babel/runtime": "7.14.0",
    "@types/node": "^15.6.0",
    "@types/react": "17.0.8",
    "@types/react-dom": "^17.0.5",
    "@types/react-router-dom": "^5.1.7",
    "typescript": "4.1.3"
  },
  "scripts": {
    "start:env": "DISABLE_NEW_JSX_TRANSFORM=true",
    "start": "npm start:env && react-scripts start",
    "build": "rollup -c",
    "test": "npm run lint && npm run unit-test",
    "eject": "react-scripts eject",
    "unit-test": "NODE_ENV=test npm run jest",
    "prepublishOnly": "npm run build",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -o docs",
    "deploy": "npm run build-storybook && gh-pages -d docs -m 'chore: deploy docs'",
    "lint": "eslint 'src/**/*.{js,ts,tsx}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "none",
    "printWidth": 80,
    "singleQuote": true
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintIgnore": [
    "node_modules",
    "build"
  ]
}
